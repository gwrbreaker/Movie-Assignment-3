@{
    ViewData["Title"] = "Edit Movie";
}
<h1>@ViewData["Title"]</h1>

@model Movie_Assignment_3.Models.Movies

<!--This is the form that passes in all the data that is from the database, but allows you to edit it and then save changes
    to the database so it is saved forever-->
<form asp-action="MovieUpdate" method="post">
    <div>
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" required value="@Model.Category"/>
    </div>

    <div>
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" required value="@Model.Title"/>
    </div>

    <div>
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" required value="@Model.Year"/>
    </div>

    <div>
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" required value="@Model.Director"/>
    </div>

    <div>
        <label asp-for="Rating">Rating?: </label>
        <select asp-for="Rating" required value="@Model.Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>

        </select>
    </div>

    <div>
        <label asp-for="Edited">Is it Edited?: </label>
        <select asp-for="Edited" required value="@Model.Edited">
            <option value="">Select One</option>
            <option value="True">Yes</option>
            <option value="False">No</option>

        </select>
    </div>

    <div>
        <label asp-for="Lent">Lent To: </label>
        <input asp-for="Lent" required value="@Model.Lent"/>
    </div>

    <div>
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" required value="@Model.Notes"/>
    </div>
    <input hidden asp-for="MovieID" value="@Model.MovieID" />


    <button type="submit">Save Changes</button>
</form>
<div asp-validation-summary="All"></div>
